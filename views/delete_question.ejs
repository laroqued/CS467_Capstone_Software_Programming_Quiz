<%- include('includes/_header') %>

    <head>

        <%- include('layouts/head') %>

    </head>


    <body>
        <div id="email-form-greeting">
            <%- include('layouts/welcome') %>
        </div>
        <div id="back-button">
            <div class="filter">
                <a class="text-black" href="/quizzes"><i class="fas fa-angle-double-left text-black"></i> Back to
                    Quizzes</a>
            </div>
        </div>
        <div class="main" id="question-form">
            <h1>Are you sure you want to delete the following question: <%= question.prompt %>
            </h1>
            <form action="/delete_question" method="POST">
                <input type="hidden" name="id" value=<%=question.id %>>
                <input type="hidden" name="quiz" value=<%=question.quiz %>>
                <button>DELETE</button>
            </form>
        </div>
    </body>

    <%- include('includes/_footer') %>