<head>
    <%- include('layouts/head') %>


        <%- include('includes/_header') %>

</head>

<body>
    <div class="container-fluid">
        <div id="quiz-greeting">
            <div id="back-button">
                <div class="filter">
                    <a class="text-black" href="/"><i class="fas fa-angle-double-left text-black"></i>
                        Home</a>
                </div>
            </div>
        </div>
    </div>

    <div class="index-page">
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-md-auto" id="index-first-row">
                    <!-- 1 of 3 rows -->

                    <div class="container-fluid setup-bg d-flex flex-column">
                        <div class='row justify-content-center'>
                            <div class="container my-auto">
                                <div class="container ">
                                    <div id="welcome">
                                        <div class="row ">
                                            <div class="col ">
                                                <%- include('layouts/welcome_light') %>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-auto" id="">
                        <!-- 2 of 3 rows -->
                        <div class="manage-quiz-title">

                            <div id="">
                                <h3 class="title-page1">Quiz</h3>
                            </div>
                        <hr id="index-title-hr">
                            <div id="">
                                <span>
                                    <h3 class="title-page1">Results</h3>
                                </span>
                            </div>
                        </div>

                        <div class="row" id="results-row">

                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Candidate Results</h5>
                                        <p class="card-text">Get the quiz stats from your individual candidates.</p>

                                        <div class="dropdown">
                                            <button class="btn btn-primary dropdown-toggle" type="button"
                                                id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                                Employers
                                            </button>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <li><a class="dropdown-item" href="#">Donnyves</a></li>
                                                <li><a class="dropdown-item" href="#">Dominique</a></li>
                                                <li><a class="dropdown-item" href="#">Aaron</a></li>
                                            </ul>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-auto" id="index-third-row">
                        <ul class="list-group">
                            <% quiz_instance.forEach(quiz=> { %>
            
            
                                <div class="card" id="new-results-card">
                                    <div class="card-header">
                                        <h5>
                                            <%= quiz_instance.firstName %> Results
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-title">Candidate</p>
                                        <p class="card-text"></p>
                                        <a id="question-form" class="btn btn-primary" href=<%="/quiz?id=" + quiz_instance._id %>><%=
                                            quiz_instance._id %></a>
            
                                    </div>
                                </div>
            
            
                                <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>


    
    </div>


</body>

<%- include('includes/_footer') %>