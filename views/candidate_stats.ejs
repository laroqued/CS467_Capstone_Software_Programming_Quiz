<%- include('includes/_header') %>

<head>
    <%- include('layouts/head') %>
</head>

<body>
    <div class="container-fluid">
        <div id="back-button">
            <div class="filter">
                <a class="text-white" href="/quizzes"><i class="fas fa-angle-double-left text-white"></i> Back to
                    Quizzes</a>
            </div>
    
        </div>
    </div>
        <div class="container-fluid">
            <div id="back-button">
                <div class="filter">
                    <a class="text-white" href="/quiz_results"><i class="fas fa-angle-double-left text-white"></i> All Quiz
                        Results</a>
                </div>
        
            </div>
        </div>






    <div id="email-form-greeting">
        <%- include('layouts/welcome_light') %>
    </div>
    <div class="manage-quiz-title">
        <div id="">
            <h3 class="title-page1">Candidate</h3>
        </div>
        <hr id="index-title-hr">
        <div id="">
            <span>
                <h3 class="title-page1">Stats</h3>
            </span>
        </div>
    </div>
    

    <div class="main">
        <h1>Candidate Info</h1>
            <hr id="survey-hr2">
        <h4> <strong>First Name:</strong>  <%= candidate.firstName %></h4>
        <hr>
        <h4><strong>Last Name:</strong> <%= candidate.lastName %></h4>
        <hr>

        <h4><strong>Email:</strong> <%= candidate.email %></h4>
        <hr>

        <h4><strong>Quiz:</strong> <%= quiz.name %></h4>
        <hr>

        <h4><strong>Employer:</strong> <%= employer.login_name %></h4>
        <hr id="survey-hr">

        <h1>Quiz Results</h1>
        <hr>

        <% if (candidate.completed) { %>
        <h4>Grade: <%= candidate.grade * 100 %>%</h4>
        <% } else { %>
        <h4>Grade: Waiting for candidate to take quiz</h4>    
        <% } %>
    </div>
</body>

<%- include('includes/_footer') %>
