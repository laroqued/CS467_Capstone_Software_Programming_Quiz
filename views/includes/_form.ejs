<!-- form handling -->
<form action="/api/users" method="POST" id="add_survey">

    <div class="new_user">
        <div class="form-group" >
            <label for="name" >Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Mark Stoenis">
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
<br>
        <div class="form-group">
            <label for="gender" >Gender</label>

            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" >
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female" >
                <label for="radio-3" class="radio-label">Female</label>
            </div>
        </div>
<br>
        <div class="form-group">
            <label for="gender">Age Range</label>
            <!-- <div class="radio inline"> -->
                <input type="radio" id="radio-4" name="age" value="18-27" >
                <label for="radio-4" class="radio-label">18-27</label>
            <!-- </div>
            <div class="radio inline"> -->
                <input type="radio" id="radio-5" name="age" value="28-39" >
                <label for="radio-5" class="radio-label">28-39</label>
            <!-- </div>
            <div class="radio inline"> -->
                <input type="radio" id="radio-6" name="age" value="40-50" >
                <label for="radio-6" class="radio-label">40-50</label>
            <!-- </div>
            <div class="radio inline"> -->
                <input type="radio" id="radio-6" name="age" value="51+" >
                <label for="radio-6" class="radio-label">51+</label>
            <!-- </div> -->
        </div>
<br>
        <div class="form-group">
            <label for="question1">How did you feel overall about the quiz?</label>
            <input type="text" class="form-control col-lg-9" id="question1" name="question1" placeholder="Enter deep thoughts">
          </div>        
<br>
          <div class="form-group">
            <label for="question2">How can we make the quiz better?</label>
            <input type="text" class="form-control col-lg-9" id="question2" name="question2" placeholder="Be honest">
          </div> 
<br>
        <div class="form-group">
            <button id="question-form" type="submit" class="btn btn-primary">Submit</button>
        </div>

    </div>
</form>