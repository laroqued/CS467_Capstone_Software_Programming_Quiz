        <div class="create-quiz-page1">
            <div class="container-fluid setup-bg d-flex flex-column">
                <div class='row justify-content-center'>
                    <div class="container my-auto">
                        <div class="container">
                            <div id="welcome-create-quiz">
                                <%- include('layouts/welcome') %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="back-button">
            <div class="filter">
