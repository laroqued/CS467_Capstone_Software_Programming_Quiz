<head>
    <%- include('layouts/head') %>
</head>

<% if (quiz_instance.completed) { %>

    <h1>This quiz has already been taken</h1>

<% } else { %>

    <h5>You are about to begin the quiz: <%= quiz.name %></h5>
    <h5>The quiz has a time limit of <%= quiz.timer %> minutes</h5>
    <h5>Press the button below to begin the quiz</h5>
    <a class="btn btn-primary" href=<%= "/take_quiz?id=" + quiz_instance._id %>>Begin Quiz</a>

<% } %>
