

  <div class="email-form">
  <h4 class="font-weight-bolder">Compose New Email</h4>

     
    <form method="POST" action="send" class="contact-form">
      <!-- Name Field ROW 1 -->
      <div class="row">
        <div class="col-12">
          <div class="form-group">
            <p>

              <input type="text" name="first_name" class="contact-form-text" placeholder="Candidate First Name" required>
            </p>
          </div>
        </div>
        <div class="col-12">
          <div class="form-group">
            <p>

              <input type="text" name="last_name" class="contact-form-text" placeholder="Candidate Last Name" required>
            </p>
          </div>
        </div>
        
        <!-- Company Field -->
        <div class="col-6">
          <div class="form-group">
            <p>
    <input type="hidden" name="email_name" value=<%=login_name%>>
    <input type="hidden" name="quiz" value=<%=quizId %> >

            </p>
          </div>
        </div>


      </div>
      <!-- Email Field  ROW 2-->
      <div class="row">
        <div class="col-12">
          <div class="form-group">
            <p>
              <input type="email" name="email" class="contact-form-text" placeholder="Candidate email" />
            </p>
          </div>
        </div>
        <!-- Phone Field -->
        <!-- <div class="col-6">
          <div class="form-group">
            <p>
              <input type="text" name="phone" class="contact-form-text" placeholder="Your phone number" required>
            </p>
          </div>
        </div> -->
 
        <div class="col-12">
          <div class="form-group">
            <p>
              <input type="hidden" name="subject" class="contact-form-text" placeholder="Subject" value="Software Programming Quiz Invitation">
            </p>
          </div>
        </div>
      <!-- Message Field -->
      <p class="full">
        <textarea class="contact-form-message" name="message" rows="5" placeholder="Your Message"></textarea>
      </p>
      <p class="full">

        <button type="submit" id="question-form" id="form-submit" class="contact-form-btn">Submit</button>

      </p>
    </form>
  </div>


</div>
